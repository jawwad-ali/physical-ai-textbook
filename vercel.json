{
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/rag_backend/api/$1" }
    ],
    "builds": [
        {
        "src": "rag_backend/api/index.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb" }
        },
        {
        "src": "src/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
        }
    ],
    "routes": [
        {
        "src": "/api/(.*)",
        "dest": "/rag_backend/api/index.py"
        },
        {
        "src": "/(.*)",
        "dest": "/src/$1"
        }
    ]
}